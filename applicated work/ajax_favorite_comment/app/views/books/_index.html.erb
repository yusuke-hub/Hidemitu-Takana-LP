<table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr class="book_<%= book.id %>">
        <%= render '/books/book', book: book %>
      </tr>
    <% end %>
  </tbody>
</table>