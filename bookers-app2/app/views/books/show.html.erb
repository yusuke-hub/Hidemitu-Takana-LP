    <% if flash[:success] %>
      <div class="flash">
        <%= flash[:success] %>
      </div>
    <% end %>

<div class="container">
  <div class="row">

  <%= render 'users/user_part', book:@book, user:@user %>

      <div class="book-detail col-9">
        <h2>Book detail</h2>
        <table>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                 <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %><br>
                 <%= @user.name %>
                <% end %>
              </td>
              <td><%= @boook.title %></td>
              <td><%= @boook.body %></td>
              <% if @boook.user.id == current_user.id %>
                <td><%= link_to "Edit", edit_book_path(@boook), class:"btn btn-success" %></td>
                <td><%= link_to "Destroy", "/books/#{@boook.id}" , class:"btn btn-danger", method: :delete %></td>
              <% end %>
            </tr>
        </table>
      </div>
    </div>
  </div>
